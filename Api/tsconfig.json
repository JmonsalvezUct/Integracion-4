{
  
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  
  "include": ["src/**/*", "prisma/seed.ts"],
  "exclude": ["dist","node_modules"],
  "strict": true
}